PORT=8080
NODE_ENV=development
API_VERSION=1.0.0
API_BASE_URL=http://localhost:8080/api

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# PostgreSQL
PG_HOST=autosec-postgres
PG_PORT=5432
PG_USER=autosec_user
PG_PASSWORD=autosec_password
PG_DATABASE=autosec_db

# MongoDB
MONGO_URI=mongodb://autosec-mongodb:27017/autosec_logs

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@autosec-rabbitmq:5672

# Redis (optional for session management and caching)
REDIS_URL=redis://autosec-redis:6379

# GeoIP
GEOIP_DB_PATH=/app/data/geoip/GeoLite2-City.mmdb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Email (for notifications - configure with your SMTP provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# External API Keys (for integrations)
PALO_ALTO_API_KEY=your-palo-alto-api-key
CISCO_ASA_HOST=your-cisco-asa-host
CISCO_ASA_USER=your-cisco-username
CISCO_ASA_PASS=your-cisco-password
SPLUNK_TOKEN=your-splunk-token
QRADAR_TOKEN=your-qradar-token